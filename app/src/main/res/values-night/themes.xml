<resources>
    <!-- Base application theme. -->
    <style name="Theme.RaaProjekat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FD7014</item>
        <item name="colorPrimaryVariant">#393E46</item>
        <item name="colorOnPrimary">#222831</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#1F293A</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">#1F293A</item>
        <item name="android:textViewStyle">@style/AlataTextViewStyle</item>

    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">24sp</item>

    <item name="android:textStyle">bold</item>
</style>


    <style name="AlataTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/alata</item>
    </style>

<style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
<item name="android:textSize">20sp</item>
<item name="android:maxLines">2</item>
<item name="android:textStyle">normal</item>
</style>



</resources>